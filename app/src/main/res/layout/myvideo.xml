<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_mymusic_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/video_topLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/half_transparent" >
        
        <ImageButton android:id="@+id/video_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_music_btn"
            android:padding="10dip"
            android:src="@drawable/icon_back"/>

        <TextView
            android:id="@+id/video_topTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="视频列表"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_sp" />

        <ImageButton
            android:id="@+id/video_searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_music_btn"
            android:padding="10.0dip"
            android:src="@drawable/icon_search" />
    </RelativeLayout>

    <ListView
        android:id="@+id/video_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/video_topLayout"
        android:divider="@color/divider_color"
        android:dividerHeight="0.5dip" />

</RelativeLayout>